<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.playbox.sportex">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logon2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SignInActivity" />
        <activity
            android:name=".DashboardActivity"
            android:label="@string/title_activity_dashboard" />
        <activity android:name=".CreateGameForm" />
        <activity android:name=".ShowGamesActivity" />
        <activity android:name=".JoinGameActivity" />
        <activity android:name=".UserJoinedGames" />
        <activity android:name=".UserHostedActivity" />
        <activity android:name=".UnjoinGameActivity" />
        <activity android:name=".RemoveGameActivity"></activity>
    </application>

</manifest>